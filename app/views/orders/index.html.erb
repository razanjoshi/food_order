<h1>All Orders</h1>

<div class="col-md-6 col-md-offset-3">
	<table class="table">
		<thead>
			<tr>
				<th>Order Id</th>
				<th>SubTotal</th>
				<th>Status</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td><%= order.id %></td>
					<td><%= order.subtotal %></td>
					<td><%= order.status %></td>
					<td>
						<%= link_to "Edit", edit_order_path(order), class: 'btn btn-warning' %>
						<%= link_to "Delete", orders_path(order), method: :delete, class: 'btn btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>